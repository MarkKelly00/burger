<h1>Eat-Da-Burger!</h1>
<div class="container">
    <img src="/assets/img/burger.png">
    <br><br>
    <div class="row">
        <div class="col-sm-6">
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
        </div>
        <div class="col-sm-6">
        {{#each burger}}
            {{#if devoured}}
                {{> burgers/burger-block devour=false}}
            {{/if}}
        {{/each}}
        </div>
    </div>
    <hr>
<h5>Enter A Burger You Want To Eat, Click "Submit".</h5>
<form class="create-form">
    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
        <button type="submit" class="btn btn-secondary">Submit</button>
    </div>

